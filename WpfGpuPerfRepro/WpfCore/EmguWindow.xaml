<Window x:Class="WpfCore.EmguWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfCore"
        mc:Ignorable="d"
        xmlns:emui="clr-namespace:Emgu.CV.UI;assembly=Emgu.CV.UI"
        xmlns:ui="clr-namespace:Emgu.CV.UI;assembly=Emgu.CV.Platform.NetCore"
        Title="EmguWindow" Height="1200" Width="1600">
    <DockPanel>
        <WindowsFormsHost x:Name="WinFormsHost" Background="Pink">
            <ui:ImageBox x:Name="CapturedImageBox" FunctionalMode="Everything" Dock="Fill"/>
        </WindowsFormsHost>
    </DockPanel>
</Window>
