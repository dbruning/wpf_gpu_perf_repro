<Window x:Class="WpfCore.EmguPictureBoxWinForms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfCore"
        xmlns:emguPictureBox="clr-namespace:EmguPictureBox;assembly=EmguPictureBox"
        mc:Ignorable="d"
        Title="EmguPictureBoxWinForms" Height="450" Width="800">
    <WindowsFormsHost x:Name="WinFormsHost" Background="Pink">
        <emguPictureBox:EmguPictureBox x:Name="EmguPictureBoxInWindowsFormsHost" Dock="Fill"/>
    </WindowsFormsHost>
</Window>
